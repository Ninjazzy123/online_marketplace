<h1>Your Cart</h1>

<ul>
 {{#each cartItems}}
    <li>{{this.title}} - {{this.category}} - ${{this.selling_price}} - {{this.seller}}
        <form action="/remove-from-cart" method="post">
            <input type="hidden" name="productId" value="{{this._id}}">
            <button type="submit">Remove</button>
        </form>
    </li>
 {{/each}}
</ul>

<a href="/">Back to Home</a>
